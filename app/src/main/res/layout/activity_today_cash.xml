<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayCash">

    <TextView
        android:id="@+id/Summ"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="60dp"
        android:text="Итого"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Summ2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Summ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="154dp"
        android:text="@string/Summ"
        app:layout_constraintBottom_toBottomOf="@+id/Summ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Summ"
        app:layout_constraintTop_toTopOf="@+id/Summ" />

    <Button
        android:id="@+id/newBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginTop="26dp"
        android:text="plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>